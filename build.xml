<project name="TC2" basedir="." default="main">

	<property name="src.dir"     value="src"/>

    <property name="build.dir"   value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="jar.dir"     value="${build.dir}/jar"/>
	
    <property name="main-class"  value="tc2.main.TC2"/>
	
	<property name="project-root"  value="tc2"/>
	
	<property name="image.dir.src" value="${src.dir}/image"/>
	<!--<property name="image.dir.dst" value="${classes.dir}/${project-root}/image"/>-->
	<property name="image.dir.dst"
			value="${classes.dir}/tc2/main"/>
    <property name="jar-files"     value="${jar.dir}/*.jar"/>
    <property name="jar-perm"     value="755"/>

<!-- Targets -->
    <target name="clean"
    	description="Delete the build directory">
        <delete dir="${build.dir}"/>
    </target>
<!-- On help: http://amazing-development.com/archives/2005/01/28/ant-help-target/ -->
    <target name="compile"
    	description="=> Compile source files in src directory, put class file into build/classes directory, and also, image files in src/image into build/classes as well"
    	>
        <mkdir dir="${classes.dir}"/>
    	<!--<mkdir dir="${image.dir.dst}"/>-->

    	<!-- http://etutorials.org/Programming/Java+extreme+programming/Chapter+3.+Ant/3.6+Passing+Arguments+to+a+Buildfile/ -->
    	<echo message="Main class => ${main-class}" ></echo>
    	
    	<javac srcdir="${src.dir}" destdir="${classes.dir}"/>
   
<!--    	<copy file="${image.dir}/*.png" todir="${classes.dir}"></copy>	-->
    	<copy todir="${image.dir.dst}">
    		<fileset dir="${image.dir.src}">
    		</fileset>
    	</copy>
        
    	
    </target>

    <target name="jar" depends="compile"
    	description="=> Execute the target &quot;compile&quot;, then put class files into a jar file, then finally, change the mode of the generated jar file into 755">
        <mkdir dir="${jar.dir}"/>
        <jar
        	destfile="${jar.dir}/${ant.project.name}.jar"
        	basedir="${classes.dir}">
        	
            <manifest>
                <attribute name="Main-Class" value="${main-class}"/>
            </manifest>
        	
<!--        	<fileset dir=".">
        		<include name="${image.dir}/*.png"/>
        	</fileset>
-->       
        	
        </jar>
    	
    	<chmod file="${jar-files}" perm="${jar-perm}"></chmod>
    	<echo message="chomod ${jar-perm} => Done: ${jar-files}"></echo>
    	
    </target>

    <target name="run" depends="jar"
    	description="Run the jar file in build/jar">
    	<java jar="${jar.dir}/${ant.project.name}.jar" fork="true"/>
    </target>

	<target name="main" depends="clean,run"
		description="Execute the target &quot;clean&quot;, followed by &quot;run&quot;"/>
	
</project>